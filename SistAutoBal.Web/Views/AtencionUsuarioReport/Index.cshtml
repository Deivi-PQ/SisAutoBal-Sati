@using SisAutoZoe.BusinessObjects.Zoe;

@{
    ViewData["Title"] = "Reporte Atencion Usuario";
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>SisAutBal - Reporte</title>
        <meta name="viewport" content="width=device-width; initial-scale=1.0" />
    </head>
    <body>
        <div class="pagetitle">
            <h1>Atencion de los Usuarios</h1>
        </div>
        <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <form class="row g-3" id="formReporte" method="get" asp-action="Report" target="fraReporte">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="inputDate" class="form-label">Tipo de Operaciones</label>
                                        <select class="form-select" id="Tipo_Oper" name="Tipo_Oper" style="width: 100%;background-color:khaki">
                                            <option value="todo">Seleccione</option>
                                            @{
                                                if (ViewData["Tipo_Oper"] != null)
                                                {
                                                    foreach (var item in ViewData["Tipo_Oper"] as IList<CTipo_Oper>)
                                                    {
                                                                <option value="@item.Cod_TipoOper">@item.Nom_TipoOper</option>
                                                    }
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label for="inputDate" class="form-label">Nro. Placa</label>
                                        <input type="text" placeholder="Nro. Placa" class="form-control" id="Nro_Placa" name="Nro_Placa" value="" onkeyup="javascript:this.value=this.value.toUpperCase();">
                                    </div>
                                    <div class="col-md-2">
                                        <label for="inputDate" class="form-label">Fecha Inicio</label>
                                        <input type="date" id="FechaInicio" name="FechaInicio" class="form-control" min="2000-01-01" max="2100-12-31"
                                               value="@Convert.ToDateTime(@ViewData["FechaInicio"]).ToString("yyyy-MM-dd")" style="width:100%;">
                                    </div>
                                    <div class="col-md-2">
                                        <label for="inputDate" class="form-label">Fecha Final</label>
                                        <input type="date" id="FechaFinal" name="FechaFinal" class="form-control" min="2000-01-01" max="2100-12-31"
                                               value="@Convert.ToDateTime(@ViewData["FechaFinal"]).ToString("yyyy-MM-dd")" style="width:100%;">
                                    </div>                                  
                                </div>
                                <div class="text-center">
                                    <button type="button" class="btn btn-danger" onclick="return Limpiar()">Cancelar</button>
                                    <button type="button" id="btPdf" class="btn btn-primary" title="Mostrar reporte" onclick="submitForm('Report')">
                                        <i class="bi bi-cloud-arrow-down"></i> Generar Reporte
                                    </button>
                                    <button type="button" class="btn btn-success" onclick="submitForm('ExportarExcel')">Exporta Excel</button>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-12">
                                        <div class="pt-2" style="height: 35rem;">
                                            <iframe name="fraReporte" frameborder="0" allowfullscreen style="width:100%;height:100%" title="Reporte Atencion Usuario"></iframe>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </section>
        <script type="text/javascript">
            function submitForm(action) {
                debugger;
                var form = document.getElementById('formReporte');
                switch (action) {
                    case 'Report':
                        form.action = '/AtencionUsuarioReport/Report';
                        break;
                    case 'ExportarExcel':
                        form.action = '/AtencionUsuarioReport/ExportarExcel';
                        break;
                    default:
                        break;
                }
                form.submit();
                if (action == "Report") {
                    $('#idreporte').show();
                }
                else { $('#idreporte').hide(); }
            }

            function Limpiar() {
                document.getElementById('Tipo_Oper').value = "todo";
             document.getElementById('Nro_Placa').value = "";
            }
        </script>
    </body>
</html>
